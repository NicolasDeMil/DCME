<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>
    <%= action_cable_meta_tag %>

    <!-- Added for today animation and charts to work at the same time -->
    <%= javascript_include_tag "//www.google.com/jsapi" %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chartkick/2.3.0/chartkick.js"></script>

    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <!-- Meta tags (SEO) -->
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div style="height:85px"></div>
      <%= render 'shared/flashes' %>
    <div class="container position-relative mt-3">
<!--  <div class="one-page-background" style="background-image: url('<%= asset_path 'home_bg.png' %>')"></div>
      <div class="one-page-background" style="background-image: url('<%= asset_path 'home_bg.png' %>')"></div> -->
      <%= yield %>
    </div>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
  </body>
</html>
