<div class="modal fade" id="create-new-project" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Name of Project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(Project.new) do |f| %>
          <%= f.input :name %>
          <%= f.button :submit, class: "button", value:"Create new Project", class: "filled-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
