<% require "time"
%>

<div class="row">
	<h1 class="p-3 underline"><%= @project.name %> <%= link_to new_project_survey_path(@project) do %><i class="fas fa-plus-circle" id="plus-btn"></i> <% end %> </h1>
</div>
